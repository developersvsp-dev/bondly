<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Bondly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your app theme here if needed -->
    </style>

    <!-- Theme used ONLY for the very first frame (before splash layout loads) -->
    <style name="LaunchTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Remove title bar -->
        <item name="android:windowNoTitle">true</item>

        <!-- Fullscreen -->
        <item name="android:windowFullscreen">true</item>

        <!-- Show drawable immediately -->
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- Disable default splash icon -->
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <!-- Normal app theme used AFTER splash -->
    <style name="Theme.Bondly" parent="Base.Theme.Bondly" />

</resources>
