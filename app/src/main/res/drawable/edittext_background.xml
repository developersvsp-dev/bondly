<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background fill -->
    <solid android:color="#FFFFFFFF"/>

    <!-- rounded corners -->
    <corners android:radius="12dp"/>

    <!-- thin border -->
    <stroke
        android:width="1dp"
        android:color="#30000000"/>

    <!-- optional padding inside the shape (EditText will still add its own padding) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
